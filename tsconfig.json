{
"compilerOptions": {
    "module": "ESNext",               // or "CommonJS" depending on your target
    "moduleResolution": "node",      // or "nodenext" if using Node 18+ with ESM
    "esModuleInterop": true,
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
